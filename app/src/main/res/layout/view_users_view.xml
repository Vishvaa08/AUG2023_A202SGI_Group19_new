<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/profilePic"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelFName"
        android:layout_toRightOf="@id/profilePic"
        android:text="Full Name :"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/userFirstName"
        android:layout_toRightOf="@+id/profilePic"
        android:layout_below="@id/labelFName"
        android:text="First Name"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/userLastName"
        android:layout_toRightOf="@+id/userFirstName"
        android:text="Last Name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelBType"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/profilePic"
        android:layout_below="@id/userFirstName"
        android:text="Blood Type :"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/userBloodType"
        android:layout_toRightOf="@id/profilePic"
        android:layout_below="@+id/labelBType"
        android:text="Blood Type"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/labelPoints"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/profilePic"
        android:layout_below="@id/userBloodType"
        android:text="Points :"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/userCurrentPoints"
        android:layout_toRightOf="@id/profilePic"
        android:layout_below="@+id/labelPoints"
        android:text="Current Points"
        android:hint="None"
        android:layout_marginLeft="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="17dp"
        android:layout_below="@+id/profilePic"
        android:background="@color/black"/>

</RelativeLayout>